<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        
        <TextView
            android:id="@+id/txtAddAdress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Добавить адрес"
            android:textColor="@color/white"
            android:background="#2A2A37"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:text="Добавьте адрес своего дома в формате\n г. Название города, ул. Название улицы, \n д. Номер дома"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt"
        />
    
    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:hint="Адрес"
        android:background="@drawable/edit_txt"
        app:layout_constraintTop_toBottomOf="@+id/txtAddAdress"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Сохранить"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/btn_save"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>